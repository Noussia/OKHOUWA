#!/bin/sh

my_random=$(awk 'BEGIN { srand(); print int(rand()*1001) }')

sleep 3

read choix


i=0

while ! [ $my_random -eq $choix ]; do
	
	if [ $my_random -gt $choix ]; then
		printf "> \n"
	fi	

	if [ $my_random -lt $choix ]; then
		printf "< \n"	
	fi
	
	i=$(($i + 1))
	
	read choix
	
done

printf "= \n"
printf "nb_secret : Vous avez trouvÃ© $my_random en $i coups \n"
